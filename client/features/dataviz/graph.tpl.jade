
div(layout-wrap, layout-align="row")
    div(layout='', layout-align='center center', style='margin-left:200px; width:600px')
        md-slider.md-primary( flex='', md-discrete, ng-model='graph.step', step='1', min='1', max='10', aria-label='rating')
        | Width
        md-slider.md-primary( flex='', md-discrete, ng-model='graph.width', step='.05', min='0', max='1', aria-label='rating')
        {{graph.step}}
        md-checkbox(ng-model='graph.displayName', aria-label='Display Name', style='margin-left: 50px;')
            | Display name
        md-button.md-primary(ng-click='graph.reset()', md-no-ink) Reset

div(layout-wrap, layout='row')
    .visualize-svg(flex='75')

    div(flex='25', layout-fill)
        md-list-item.md-3-line.md-long-text(ng-repeat='article in graph.articles')
            .md-list-item-text(layout='column')
                h3(style='white-space:normal')
                    a(target='_blank', href='http://{{article.url}}') {{ article.title }}
                p {{ article.url.split('/')[0] }}
                p {{ article.date | date: 'dd MMM yyyy' }}
